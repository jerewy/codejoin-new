{
  "name": "code-execution-backend",
  "version": "1.0.0",
  "description": "Secure code execution backend with Docker isolation and resilient AI services",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "node test/scripts/run-tests.js",
    "test:unit": "node test/scripts/run-tests.js --type unit",
    "test:integration": "node test/scripts/run-tests.js --type integration",
    "test:performance": "node test/scripts/run-tests.js --type performance",
    "test:watch": "node test/scripts/run-tests.js --watch",
    "test:coverage": "node test/scripts/run-tests.js --coverage",
    "test:ci": "node test/scripts/run-tests.js --format junit --coverage --bail",
    "docker:build": "node scripts/build-images.js",
    "lint": "eslint src/ test/",
    "lint:fix": "eslint src/ test/ --fix",
    "security:audit": "npm audit --audit-level=moderate",
    "validate": "npm run lint && npm run security:audit && npm run test:unit"
  },
  "keywords": ["code-execution", "docker", "security", "api", "ai", "resilience", "multi-provider"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "dockerode": "^4.0.2",
    "uuid": "^9.0.1",
    "joi": "^17.11.0",
    "winston": "^3.11.0",
    "dotenv": "^16.3.1",
    "@google/generative-ai": "^0.21.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "socket.io-client": "^4.7.2",
    "eslint": "^8.54.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-security": "^1.7.1",
    "jest-junit": "^16.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "roots": ["<rootDir>/test"],
    "testMatch": [
      "**/__tests__/**/*.test.js",
      "**/?(*.)+(spec|test).js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js",
      "!src/config/**",
      "!src/utils/logger.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"],
    "testTimeout": 30000,
    "setupFilesAfterEnv": ["<rootDir>/test/setup.js"],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "moduleFileExtensions": ["js", "json"],
    "verbose": true
  }
}